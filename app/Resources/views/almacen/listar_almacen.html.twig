{% extends '::index.html.twig' %}

{% block title %}Almacen{% endblock %}

{% block content %}
    {% if almacen %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Ingrediente/producto</th>
                <th>stock</th>
                <th>stock Minimo</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for al in almacen %}
                <tr>
                    <td>{{ al.nombreIngrediente }}</td>
                    <td>{{ al.stock }}</td>
                    <td>{{ al.stockMin }}</td>
                    <td>
                        <a href="{{ path('almacen_modificar', { 'almacen': al.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-pencil"></i> Modificar
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>No hay pedidos para mostrar</h2>
    {% endif %}
{% endblock %}