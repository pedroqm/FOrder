{% extends '::index.html.twig' %}

{% block title %}Listar pedido{% endblock %}

{% block content %}
    {% if pedidos %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Estado</th>
                <th>Incidencias</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for pedido in pedidos %}
                <tr>
                    <td>{{ pedido.estado }}</td>
                    <td>{{ pedido.incidencias }}</td>
                    <td>
                        <a href="{{ path('pedido_modificar', { 'pedido': pedido.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-pencil"></i> Modificar
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>No hay pedidos para mostrar</h2>
    {% endif %}
{% endblock %}