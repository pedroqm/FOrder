<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        <!-- BEGIN GLOBAL MANDATORY STYLES -->
        <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/global/plugins/font-awesome/css/font-awesome.min.css") }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/global/plugins/simple-line-icons/simple-line-icons.min.css") }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/global/plugins/bootstrap/css/bootstrap.min.css") }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/global/plugins/uniform/css/uniform.default.css") }}" rel="stylesheet" type="text/css"/>
        <!-- END GLOBAL MANDATORY STYLES -->
        <!-- BEGIN PAGE LEVEL STYLES -->
        <link href="{{ asset("bundles/framework/css/assets/admin/pages/css/login.css") }}" rel="stylesheet" type="text/css"/>
        <!-- END PAGE LEVEL SCRIPTS -->
        <!-- BEGIN THEME STYLES -->
        <link href="{{ asset("bundles/framework/css/assets/global/css/components-md.css") }}" id="style_components" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/global/css/plugins-md.css") }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/admin/layout/css/layout.css") }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("bundles/framework/css/assets/admin/layout/css/themes/grey.css") }}" rel="stylesheet" type="text/css" id="style_color"/>
        <link href="{{ asset("bundles/framework/css/assets/admin/layout/css/custom.css") }}" rel="stylesheet" type="text/css"/>
        <!-- END THEME STYLES -->
        <style>
            body {
                padding-top: 40px;
                padding-bottom: 40px;
            }
            .container{
                max-width: 80%;
            }
            #principal{
                min-height: 500px;
                padding: 20px 60px 40px 60px;
            }
            label{
                padding-right: 20px;
            }
            a, button, label{
              margin-bottom: 10px !important;
            }
            .footer {
                position: absolute;
                width: 100%;
                /* Set the fixed height of the footer here */
                height: 40px;
                background-color: #f5f5f5;
                padding: 10px;
            }
            #a{
                margin-top: 60px;
            }
            a{
                margin-bottom: 30px;
            }
            input{
                margin-bottom: 10px;
            }
            {% block stylesheets %}{% endblock %}
        </style>


        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="{{ asset("bundles/framework/css/assets/global/plugins/jquery.min.js") }}" type="text/javascript"></script>
