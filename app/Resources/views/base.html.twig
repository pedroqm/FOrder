        <script src="{{ asset("bundles/framework/css/assets/admin/layout/scripts/demo.js") }}" type="text/javascript"></script>
        <script src="{{ asset("bundles/framework/css/assets/admin/pages/scripts/login.js") }}" type="text/javascript"></script>
