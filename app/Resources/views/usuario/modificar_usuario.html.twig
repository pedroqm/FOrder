{% extends '::index.html.twig' %}

{% block title %}Modificar usuario {{ usuario.nombreUsuario }}{% endblock %}

{% block content %}
    <h1 class="well">Modificar datos de  {{ usuario.nombreUsuario }}</h1>
    <div class="form-group">
    {{ form(formulario) }}

        <form action="{{ path('cambiarRol', {'usuario': usuario.id}) }}" method="post">

        <h4>Cambiar Rol</h4>
        <select name="rol" id="rol">
            {%  if usuario.esAdmin==true %}
                <option value="admin" selected>Admin</option>
                <option value="servicio">Servicio</option>
                <option value="cliente">Cliente</option>
            {% endif %}
            {%  if usuario.esCamarero==true %}
                <option value="admin">Admin</option>
                <option value="servicio" selected>Servicio</option>
                <option value="cliente">Cliente</option>
            {% endif %}
            {%  if usuario.esCliente==true %}
                <option value="admin">Admin</option>
                <option value="servicio">Servicio</option>
                <option value="cliente" selected>Cliente</option>
            {% endif %}

        </select>
            <button class="btn btn-danger btn-sm" type="submit" name="cambiar">Cambiar Rol </button>
        </form>
    </div>
    <a href="{{ path('usuarios_listar') }}" class="btn btn-info">Volver al listado de usuarios</a>
{% endblock %}