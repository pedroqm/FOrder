{% extends '::index.html.twig' %}

{% block title %}Listar ingredientes{% endblock %}

{% block content %}
    {% if ingrediente %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Stock</th>
                <th>Stock Minimo</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for ing in ingrediente %}
                <tr>
                    <td>{{ ing.nombreIngrediente }}</td>
                    <td>{{ ing.cantidad}}</td>
                    <td>
                        <a href="{{ path('ingrediente_modificar', { 'ingrediente': ing.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-pencil"></i> Modificar ingredientes
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>No hay ingredientes para mostrar</h2>
    {% endif %}
{% endblock %}